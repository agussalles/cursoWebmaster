<div class="container" style="margin: 50px auto;">
    <div class="row">
        <div class="col">
            <p class="text-end">Hola {{usuario}}! <a href="/admin/login/logout" class="btn btn-sm btn-danger">Cerrar sesión</a></p>
        </div>
    </div>
    <div class="row" style="margin: 2em 0 2em 0;">
        <div class="col-9">
            <h3>Listado de notas del blog</h3>
        </div>
        <div class="col-3" text-right>
            <a href="/admin/blog/agregar" class="btn btn-success"><i class="fa fa-plus"></i> Nuevo</a>
        </div>
    </div>
    <div class="row">
        <div class="col">
            <table class="table">
                <thead class="thead-dark">
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">Título</th>
                        <th scope="col" class="text-center">Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each blog}}
                    <tr>
                        <th scope="row">{{id}}</th>
                        <td>{{titulo}}</td>
                        <td class="text-center">
                            <a href="/admin/blog/modificar/{{id}}" class="btn btn-sm btn-secondary"><i class="fa fa-pencil-alt"></i></a>
                            <a href="/admin/blog/eliminar/{{id}}" class="btn btn-sm btn-secondary"><i class="fa fa-trash"></i></a>
                        </td>
                    </tr>
                    {{/each}}
                </tbody>
            </table>
        </div>
    </div>
</div>